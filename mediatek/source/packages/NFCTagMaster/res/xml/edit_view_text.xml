<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="0dip" 
    android:orientation="vertical" >
    <TextView android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="@string/edit_view_text_title"
        android:layout_marginLeft="@dimen/tag_info_item_left_cut"
        android:textAppearance="@style/info_item_label"
        android:layout_marginTop="20dip"/>
    <View android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/tag_info_lable_content_separator_color"/>
    
    <EditText android:id="@+id/edit_info_text"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="30dip"
        android:layout_marginBottom="10dip"
        android:gravity="bottom"
        android:lines="5"
        android:hint="@string/edit_view_text_hint"/>
</LinearLayout>