<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/ClientNewVersionScreen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ScrollView android:id="@+id/ClientNewVersionDiscription"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout android:id="@+id/ClientNewVersionContent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">



                <LinearLayout android:id="@+id/ClientNewVersionDetail"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <TextView android:id="@+id/new_ver_content_title"
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        style="@style/TextView"
                        android:textStyle="bold">
                    </TextView>
                    <TextView android:id="@+id/new_ver_content"
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="@string/ver_content"
                        style="@style/TextView"
                        android:paddingTop="0dip">
                    </TextView>
	                <TextView android:id="@+id/new_ver_Notes_content"
	                    android:layout_width="fill_parent" 
	                    android:layout_height="wrap_content"
	                    style="@style/TextView">
	                </TextView>
                </LinearLayout>
                
                <LinearLayout android:id="@+id/ClientNewVersionProgress"
                    android:layout_width="fill_parent"
                    android:layout_height="100dip"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">
	                <TextView android:layout_height="wrap_content"
	                    android:layout_width="fill_parent"
	                    android:text="@string/downloading_title"
	                    style="@style/TextView"/>
                    <ProgressBar android:id="@+id/ClientNewVersionbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:max="100"
                        android:progress="0">
                    </ProgressBar>
                    <LinearLayout android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:padding="2dip"
	                    android:orientation="horizontal"
	                    android:gravity="center">
	                    <View android:id="@+id/gapView1"
	                        android:layout_width="0dip" 
	                        android:layout_height="fill_parent"
	                        android:layout_weight="1"/>
	                    <TextView android:id="@+id/ClientNewVersionPercent"
	                        android:layout_width="wrap_content" 
	                        android:layout_height="wrap_content"
	                        android:gravity="center">
	                    </TextView>
	                    <TextView android:id="@+id/ClientNewVersionRatio"
	                        android:layout_width="wrap_content" 
	                        android:layout_height="wrap_content"
	                        android:gravity="center"
	                        android:layout_marginLeft="5dip">
	                    </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>
