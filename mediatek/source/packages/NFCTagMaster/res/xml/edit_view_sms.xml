<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="0dip" 
    android:orientation="vertical" >
    
    <TextView android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="@dimen/tag_info_item_left_cut"
        android:textAppearance="@style/info_item_label"
        android:text="@string/edit_view_sms_receiver_label"/>
    <View android:layout_width="match_parent"
        android:layout_height="@dimen/tag_info_lable_content_separator_width"
        android:layout_marginTop="0dip"
        android:background="@color/tag_info_lable_content_separator_color"/>
        
    <LinearLayout android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:orientation="horizontal" 
        android:layout_marginTop="10dip"
        android:gravity="center_vertical">
    	<EditText android:id="@+id/edit_info_sms_receiver"
        	android:layout_width="0dip"
        	android:layout_weight="1" 
        	android:layout_height="wrap_content"
        	android:inputType="phone"/>
        <ImageView android:id="@+id/edit_info_sms_selector"
            android:layout_width="wrap_content" 
        	android:layout_height="wrap_content"
        	android:src="@drawable/ic_edit_info_sms_select"
        	android:background="@drawable/flying_icon_bg"/>
    </LinearLayout>
        
    <!-- Subject -->
    <LinearLayout android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:id="@+id/edit_info_sms_subject_component"
        android:visibility="gone"
        android:orientation="vertical">
    	<TextView android:layout_width="wrap_content" 
        	android:layout_height="wrap_content"
        	android:layout_marginTop="10dip"
        	android:layout_marginLeft="@dimen/tag_info_item_left_cut"
        	android:textAppearance="@style/info_item_label"
        	android:text="@string/edit_view_sms_subject_label"/>
    	<View android:layout_width="match_parent"
        	android:layout_height="@dimen/tag_info_lable_content_separator_width"
        	android:background="@color/tag_info_lable_content_separator_color"/>
    	<EditText android:id="@+id/edit_info_sms_subject"
        	android:layout_width="match_parent" 
        	android:layout_height="wrap_content"
        	android:layout_marginTop="10dip"
        	android:gravity="top"/>
    </LinearLayout>
    
    <!-- Attachment -->
    <LinearLayout android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:id="@+id/edit_info_sms_attach_component"
        android:visibility="gone"
        android:orientation="vertical">
    	<TextView android:layout_width="wrap_content" 
        	android:layout_height="wrap_content"
        	android:layout_marginTop="10dip"
        	android:layout_marginLeft="@dimen/tag_info_item_left_cut"
        	android:textAppearance="@style/info_item_label"
        	android:text="@string/edit_view_sms_attachment_label"/>
    	<View android:layout_width="match_parent"
        	android:layout_height="@dimen/tag_info_lable_content_separator_width"
        	android:background="@color/tag_info_lable_content_separator_color"/>
    	<LinearLayout
        	android:layout_width="match_parent" 
        	android:layout_height="wrap_content" 
        	android:orientation="horizontal" 
       	 	android:gravity="center_vertical">
    		<TextView android:layout_width="0dip" 
    	    	android:id="@+id/edit_info_sms_attach_path"
        		android:layout_height="wrap_content"
        		android:layout_weight="1"
        		android:textAppearance="@style/info_item"
        		android:layout_marginLeft="@dimen/tag_info_item_left_cut"
        		android:layout_marginTop="5dip"/>
        	<ImageView android:id="@+id/edit_info_sms_attach_selector"
            	android:layout_width="wrap_content" 
        		android:layout_height="wrap_content"
        		android:gravity="center_vertical"
        		android:src="@drawable/ic_edit_info_sms_attach_selector"/>
    	</LinearLayout>
    </LinearLayout>
    
    <!-- Content -->
    <TextView android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="@dimen/tag_info_item_left_cut"
        android:textAppearance="@style/info_item_label"
        android:text="@string/edit_view_sms_content_label"/>
    <View android:layout_width="match_parent"
        android:layout_height="@dimen/tag_info_lable_content_separator_width"
        android:background="@color/tag_info_lable_content_separator_color"/>
    <EditText android:id="@+id/edit_info_sms_content"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="20dip" 
        android:gravity="top"
        android:lines="5"/>
    
</LinearLayout>
</ScrollView>