<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Preference without 'Holo' will auto adjust its text size when not window title-->
    <style name="Theme.Holo.NoTitleBar"  parent="@android:style/Theme.Holo">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="Theme.NoTitleBar"  parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="Theme.Holo.Light.NoTitleBar"  parent="@android:style/Theme.Holo.Light">
    	<item name="android:windowNoTitle">true</item>
    </style>
    
    <!-- This item seems have no effect -->
    <style name="Theme.Holo.Light.GrayBack"  parent="@android:style/Theme.Holo.Light">
    	<item name="android:colorBackground">@color/main_background</item>
    </style>
    
    <!-- Tag info item label style -->
    <style name="info_item_label">
        <item name="android:textSize">@dimen/read_tag_info_item_label_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/read_tag_info_item_label_color</item>
    </style>
    <!-- Tag detail info item style -->
    <style name="info_item">
        <item name="android:textSize">@dimen/tag_info_item_font_size</item>
        <item name="android:textColor">@color/tag_info_item_color</item>
    </style>
    <!-- Tag detail info item summary style -->
    <style name="info_item_summary">
        <item name="android:textSize">@dimen/tag_info_item_summary_font_size</item>
        <item name="android:textColor">@color/tag_info_item_color</item>
    </style>
</resources>
