<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" 
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:gravity="center_horizontal">
  
    <TextView
      android:layout_width="wrap_content"
  	  android:layout_height="wrap_content"
  	  android:id="@+id/desense_lcd_title_textview"
  	  android:textAppearance="?android:attr/textAppearanceLarge"
  	  android:text="@string/lcd_write_cycle"
  	  android:layout_margin="30dip">
    </TextView>
    
  	<LinearLayout
  	  android:orientation="horizontal"
  	  android:layout_width="wrap_content"
  	  android:layout_height="wrap_content"
  	  android:gravity="center">
  	    <Button 
  	      android:layout_width="60dip"
  	      android:layout_height="wrap_content"
  	      android:id="@+id/desense_lcd_down_btn"
  	      android:textSize="30sp"
  	      android:textStyle="bold"
  	      android:padding="1dip"
  	      android:layout_marginRight="10dip">
  	    </Button>
  	    <EditText
  	      android:layout_width="100dip"
  	      android:layout_height="wrap_content"
  	      android:inputType="number"
  	      android:id="@+id/desense_lcd_value_edit">
  	    </EditText>
  	    <Button 
  	      android:layout_width="60dip"
  	      android:layout_height="wrap_content"
  	      android:id="@+id/desense_lcd_up_btn"
  	      android:textSize="30sp"
  	      android:textStyle="bold"
  	      android:padding="1dip"
  	      android:layout_marginLeft="10dip">
  	    </Button>
  	</LinearLayout>
  	
  	<TextView
      android:layout_width="wrap_content"
  	  android:layout_height="wrap_content"
  	  android:id="@+id/desense_lcd_desc_textview"
  	  android:textAppearance="?android:attr/textAppearanceMedium"
  	  android:layout_margin="15dip">
    </TextView>
  	
  	<Button 
      android:layout_width="100dip"
      android:layout_height="wrap_content"
      android:id="@+id/desense_lcd_set_btn"
      android:text="@string/desense_text_set"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_marginTop="30dip">
    </Button>
  
</LinearLayout>
