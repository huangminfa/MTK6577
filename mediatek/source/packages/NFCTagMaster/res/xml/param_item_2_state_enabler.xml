<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/tag_info_item_left_cut"
    android:paddingRight="@dimen/tag_info_item_left_cut"
    android:layout_marginTop="30dip"
    android:layout_marginBottom="0dip"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <TextView 
        android:id="@+id/param_spinner_label"
        android:layout_width="0dip" 
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/info_item"/>
    <Spinner android:id="@+id/param_spinner_status_selector" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:entries="@array/param_2_status_entry"
        />
    
    <View android:layout_width="30dip" 
        android:layout_height="52dip"/>
    
    <CheckBox android:id="@+id/param_spinner_chbox"
        android:layout_width="wrap_content" 
        android:layout_marginRight="0dip"
        android:layout_height="wrap_content"/>
</LinearLayout>