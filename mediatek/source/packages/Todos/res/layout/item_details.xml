<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:orientation="vertical" android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout style="@style/Title" android:id="@+id/details_title">
        <ImageView android:id="@+id/back" style="@style/TodoImgButton"
            android:layout_alignParentLeft="true" android:layout_centerInParent="true"
            android:paddingLeft="0dp" android:paddingRight="0dp"
            android:src="@drawable/ic_todo_previous_day" />

        <ImageView android:id="@+id/icon" android:layout_width="wrap_content"
            android:layout_height="@dimen/HeaderIconSize"
            android:layout_toRightOf="@id/back" android:layout_centerInParent="true"
            android:src="@drawable/ic_launcher_todo" />

        <TextView android:id="@+id/details_name" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_toRightOf="@id/icon"
            android:layout_centerInParent="true" android:gravity="center"
            android:textStyle="bold" android:text="@string/todo_details_title"
            android:textColor="@color/HeaderTextColor" android:textSize="@dimen/HeaderTextSize" />

        <ImageButton android:id="@+id/btn_new_todo" style="@style/TodoImgButton"
            android:layout_alignParentRight="true" android:src="@drawable/todo_add_new" />
    </RelativeLayout>

    <ScrollView android:layout_width="fill_parent"
        android:layout_height="match_parent" android:layout_weight="1">
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="top"
            android:orientation="vertical">
            <com.mediatek.todos.TodoEditText
                android:id="@+id/title" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2" android:hint="@string/hint_title"
                android:imeOptions="actionNext" />

            <com.mediatek.todos.TodoEditText
                android:id="@+id/details" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="top"
                android:minLines="@integer/LineEditTextMinLines"
                android:lineSpacingMultiplier="1.2" android:imeOptions="actionDone"
                android:autoText="false" android:hint="@string/hint_details" />

            <LinearLayout android:id="@+id/set_due_date"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:gravity="center" android:clickable="true"
                android:background="@drawable/color_background"
                android:orientation="horizontal">
                <ImageView android:id="@+id/date_icon"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/ButtonPadding"
                    android:paddingRight="@dimen/ButtonPadding"
                    android:paddingTop="@dimen/ButtonPadding"
                    android:paddingBottom="@dimen/ButtonPadding" android:src="@drawable/ic_unexpire" />

                <TextView android:id="@+id/date_text"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_weight="1" android:gravity="left|center"
                    android:minHeight="36dip" android:text="@string/no_expire_date"
                    android:textSize="@dimen/DueDateTextSize" />

                <ImageButton android:id="@+id/btn_due_date_remove"
                    style="@style/TodoImgButton" android:paddingLeft="@dimen/ButtonPadding"
                    android:paddingRight="@dimen/ButtonPadding"
                    android:paddingTop="@dimen/ButtonPadding"
                    android:paddingBottom="@dimen/ButtonPadding" android:src="@drawable/ic_todo_remove" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/details_bottom" style="@style/Title.Bottom">
        <ImageButton android:id="@+id/btn_change_done_todo_status"
            style="@style/TodoImgButton" android:layout_alignParentLeft="true"
            android:src="@drawable/ic_todo_done" android:layout_marginLeft="@dimen/ButtonMarginEdge" />

        <ImageButton android:id="@+id/btn_delete" style="@style/TodoImgButton"
            android:layout_alignParentRight="true" android:src="@drawable/ic_todo_delete"
            android:layout_marginRight="@dimen/ButtonMarginEdge" />
    </RelativeLayout>
    <LinearLayout android:id="@+id/cancel_done" style="@style/Title.Bottom"
        android:orientation="horizontal">
        <Button android:id="@+id/btn_cancel" style="@style/TodoImgButton"
            android:layout_width="wrap_content" android:layout_height="match_parent"
            android:layout_weight="1" android:text="@string/btn_cancel" />
        <TextView android:layout_width="1dp" android:layout_height="match_parent"
            android:gravity="center" android:text="@string/separate"
            android:textSize="28dp" android:textColor="@color/NumbersTextColor" />
        <Button android:id="@+id/btn_done" style="@style/TodoImgButton"
            android:layout_width="wrap_content" android:layout_height="match_parent"
            android:layout_weight="1" android:text="@string/btn_done" />
    </LinearLayout>
</LinearLayout>
