<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" 
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:gravity="center_horizontal">
  	
  	<LinearLayout
  	  android:orientation="horizontal"
  	  android:layout_width="wrap_content"
  	  android:layout_height="wrap_content"
  	  android:layout_marginTop="30dip"
  	  android:gravity="center">
  	  	<TextView
  	  	  android:layout_width="wrap_content"
  	      android:layout_height="wrap_content"
  	      android:id="@+id/desense_back_light_frequency"
  	      android:text="@string/desense_back_light_frequency"
  	      android:textAppearance="?android:attr/textAppearanceMedium"
  	      android:layout_marginRight="10dip">
  	  	</TextView>
  	  	<EditText
  	      android:layout_width="100dip"
  	      android:layout_height="wrap_content"
  	      android:inputType="number"
  	      android:id="@+id/desense_back_light_frequency_edit">
  	    </EditText>
  	    <Button 
  	      android:layout_width="60dip"
  	      android:layout_height="wrap_content"
  	      android:id="@+id/desense_back_light_frequency_btn"
  	      android:text="@string/desense_text_set"
  	      android:textAppearance="?android:attr/textAppearanceMedium"
  	      android:layout_marginLeft="10dip">
  	    </Button>
  	</LinearLayout>
  	
  	<TextView
      android:layout_width="wrap_content"
  	  android:layout_height="wrap_content"
  	  android:id="@+id/desense_back_light_freq_desc_textview"
  	  android:textAppearance="?android:attr/textAppearanceMedium"
  	  android:layout_margin="15dip">
    </TextView>
  	
  	<LinearLayout
  	  android:orientation="horizontal"
  	  android:layout_width="wrap_content"
  	  android:layout_height="wrap_content"
  	  android:layout_marginTop="15dip"
  	  android:gravity="center">
  	  	<TextView
  	  	  android:layout_width="wrap_content"
  	      android:layout_height="wrap_content"
  	      android:id="@+id/desense_back_light_duty"
  	      android:text="@string/desense_back_light_duty"
  	      android:textAppearance="?android:attr/textAppearanceMedium"
  	      android:layout_marginRight="10dip">
  	  	</TextView>
  	  	<EditText
  	      android:layout_width="100dip"
  	      android:layout_height="wrap_content"
  	      android:inputType="number"
  	      android:id="@+id/desense_back_light_duty_edit">
  	    </EditText>
  	    <Button 
  	      android:layout_width="60dip"
  	      android:layout_height="wrap_content"
  	      android:id="@+id/desense_back_light_duty_btn"
  	      android:text="@string/desense_text_set"
  	      android:textAppearance="?android:attr/textAppearanceMedium"
  	      android:layout_marginLeft="10dip">
  	    </Button>
  	</LinearLayout>
  	
  	<TextView
      android:layout_width="wrap_content"
  	  android:layout_height="wrap_content"
  	  android:id="@+id/desense_back_light_duty_desc_textview"
  	  android:textAppearance="?android:attr/textAppearanceMedium"
  	  android:layout_margin="15dip">
    </TextView>
  	
</LinearLayout>
