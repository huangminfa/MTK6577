<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
   android:orientation="vertical"
  android:layout_height="wrap_content">
 
   <LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:orientation="horizontal"
  android:layout_height="wrap_content"> 
  
  	<TextView android:id="@+id/TestModetxv" android:layout_width="fill_parent"
		android:layout_marginTop = "20px"
		android:layout_marginLeft = "3pt"
		android:layout_height="wrap_content" android:layout_weight="1"></TextView>

	<CheckBox android:text="@string/emptyStr" android:id="@+id/TestModeCb"
		android:layout_marginTop = "20px"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1"></CheckBox>
  
  </LinearLayout>
  
  <LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:orientation="horizontal"
  android:layout_height="wrap_content">
  
  <TextView android:text="@string/BTTestMode_edit_Text" 
			android:layout_marginLeft="10dip"
			android:layout_marginTop="10dip"
			android:id="@+id/BTTestMode_edit_Text" 
			android:layout_width="120dip" 
			android:layout_height="wrap_content"></TextView>
			
	  <EditText android:text="@string/BTTestMode_edit" 
			android:layout_marginLeft="10dip" 
			android:layout_marginTop="10dip"
			android:id="@+id/BTTestMode_edit" 
			android:layout_width="100dip" 
			android:layout_height="wrap_content"
			android:numeric="integer"
			android:singleLine="true"
			android:maxLength="1"></EditText>
</LinearLayout>
</LinearLayout>
