<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical">

	<TableLayout android:id="@+id/TableLayout01"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="@string/CpuFreq_BtnStartTest_Text"
				android:layout_marginLeft = "3pt"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<Button android:id="@+id/CpuFreq_BtnStartTest" android:text="@string/CpuFreq_BtnStartTest"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
		</TableRow>
		
		<TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="@string/CpuFreq_BtnStopTest_Text"
				android:layout_marginLeft = "3pt"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<Button android:id="@+id/CpuFreq_BtnStopTest" android:text="@string/CpuFreq_BtnStopTest"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
		</TableRow>
		
		<TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="@string/CpuFreq_BtnCurrentTest_Text"
				android:layout_marginLeft = "3pt"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<Button android:id="@+id/CpuFreq_BtnCurrentTest" android:text="@string/CpuFreq_BtnCurrentTest"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
		</TableRow>		

	</TableLayout>
	<ScrollView android:id="@+id/ScrollView01"
			android:layout_width="fill_parent" android:layout_height="60dip">
			<TextView android:text="@string/CpuFreq_Info" 
			    android:id="@+id/CpuFreq_Info" android:textColor="#FFFF0000"
				android:layout_marginLeft = "3pt"
				android:layout_width="fill_parent" android:layout_height="60dip"></TextView>
		</ScrollView>
	
</LinearLayout>
