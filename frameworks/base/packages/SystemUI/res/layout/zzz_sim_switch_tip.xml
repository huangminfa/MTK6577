<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/zzz_sim_switch_tip_outline">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/sim_switch_tip_content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="8dp"
			android:paddingRight="4dp"
			android:paddingTop="8dp"
			android:paddingBottom="4dp"
			android:textSize="16sp"
			android:textColor="#282828" />
		<ImageView
			android:id="@+id/sim_switch_tip_close"
			android:layout_width="40dip"
			android:layout_height="40dip"			
			android:layout_marginTop="2dp"
			android:layout_marginRight="0dp"
			android:layout_alignParentRight="true"
			android:src="@drawable/zzz_sim_switch_tip_close" />
	</LinearLayout>
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:scaleType="fitXY"
		android:src="@drawable/zzz_sim_switch_tip_divider_line" />
	<CheckBox
		android:id="@+id/sim_switch_tip_check"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		android:layout_marginBottom="2dp"
		android:paddingLeft="30dp"
		android:button="@drawable/zzz_sim_switch_tip_check"
		android:textSize="16sp"
		android:textColor="#505050"
		android:text="@string/remind_next_time"
		android:checked="true" />
</LinearLayout>
