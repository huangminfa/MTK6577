<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
  
      <Preference
            android:key="show CP Name"
            android:summary="@string/Current_Selected_MOLR_PositionType"/>
  	 <CheckBoxPreference
            android:key="External Address"
            android:title="@string/External_Address"
            android:summaryOn="@string/External_Address_Summary_on"
            android:summaryOff="@string/External_Address_Summary_off"
            android:persistent="false"/>
   	<CheckBoxPreference
            android:key="MLC Address"
            android:title="@string/MLC_Number"
            android:summaryOn="@string/MLC_Number_Summary_on"
            android:summaryOff="@string/MLC_Number_Summary_off"
            android:persistent="false"/>
  	 <EditTextPreference
            android:key="External Address Value"
            android:title="@string/External_Address_Value"
            android:dialogTitle="@string/External_Address_Value_editbox_title"
            android:persistent="false"
            android:dependency="External Address"/>
     <EditTextPreference
            android:key="MLC Address Value"
            android:title="@string/MLC_Number_Value"
            android:dialogTitle="@string/MLC_Number_Value_editbox_title"
            android:persistent="false"
            android:dependency="MLC Address"/>
    <ListPreference
            android:key="MOLR Type Selection"
            android:title="@string/MOLR_Type_TITLE"
            android:summary="@string/Selected_MOLR_Type"
            android:dialogTitle="@string/MOLR_Type_TITLE"
            android:entries="@array/molor_type"
            android:entryValues="@array/molor_type"
            android:persistent="false" />
    <ListPreference
            android:key="sim_id_pref"
            android:title="@string/SIM_SELECTION_TITLE"
            android:summary="@string/SIM_SELECTION_Summary"
            android:dialogTitle="@string/SIM_SELECTION_TITLE"
            android:entries="@array/sim_prefer"
            android:entryValues="@array/sim_prefer"
            android:persistent="false" />
</PreferenceScreen>
