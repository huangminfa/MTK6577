<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mediatek.nfc.tag"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="11" />
    <uses-permission android:name="android.permission.NFC"/>
	<uses-permission android:name="android.permission.READ_CONTACTS"/>
	<uses-permission android:name="android.permission.CALL_PHONE"/>
	<uses-permission android:name="android.permission.READ_CALENDAR"/>
	<uses-permission android:name="android.permission.WRITE_CALENDAR"/>
	<uses-permission android:name="com.android.browser.permission.READ_HISTORY_BOOKMARKS"/>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!-- 
	<uses-permission android:name="android.permission.SET_ORIENTATION" />
     -->

    <!-- 
     -->
    <application
        android:icon="@drawable/ic_launcher"
        android:theme="@android:style/Theme.Holo.Light" 
        android:uiOptions="splitActionBarWhenNarrow"
        android:label="@string/app_name" >
        
        <activity android:name=".HomeActivity" 
            android:label="@string/app_name">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".TagWriteHost" 
        	android:theme="@style/Theme.Holo.Light.NoTitleBar">
        </activity>
        
        <activity android:name=".history.HistoryHost" 
        	android:theme="@style/Theme.Holo.Light.NoTitleBar"
            android:label="@string/entrance_history">
        </activity>
        
        <activity android:name=".write.TagTypeList" 
            android:icon="@drawable/ic_launcher_writing"
            android:label="@string/label_activity_tag_write"></activity>
        
        <activity android:name=".write.TagInfoEditorFrame" 
            android:configChanges="keyboardHidden|orientation" 
            android:icon="@drawable/ic_launcher_writing"
            android:label="@string/label_edit_tag_activity"></activity>
        <activity android:name=".write.WriteTagActivity" 
            android:label="@string/label_write_tag_activity" 
            android:icon="@drawable/ic_write_tag_activity" 
            android:launchMode="singleTop"></activity>
        <activity android:name=".record.AppList" 
            android:label="@string/app_select_activity_label"></activity>
        
         <!-- Tag reader -->   
         <activity android:name=".TagReaderFrame" 
             android:label="@string/label_read_tag_activity" 
             android:icon="@drawable/ic_read_tag_activity">
             <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
            <!-- NDEF, Accept vCard, vEvent, parameter, note tag, 
            	positive priority have no effect for 3th party application-->
           	<intent-filter android:priority="1">
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <!-- Plain text -->
                <data android:mimeType="text/plain"/>
                <!-- vCard -->
                <data android:mimeType="text/vcard" />
                <data android:mimeType="text/x-vcard" />
                <data android:mimeType="text/x-vCard" />
                <!-- vEvent -->
                <data android:mimeType="text/x-vcalendar" />
                <!-- Parameter tag -->
                <data android:mimeType="application/com.mediatek.nfc.tag.param" />
            </intent-filter>
            
           	<!-- NDEF, Accept URL tag , Android Browser default priority is -101-->
            <intent-filter android:priority="1">
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="http" />
                <data android:scheme="https" />
            </intent-filter>
            
            <!-- NDEF, other common URI tag-->
            <intent-filter android:priority="1">
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="tel" />
                <data android:scheme="sms" />
                <data android:scheme="mms" />
                <data android:scheme="mailto" />
                <data android:scheme="midlet" />
            </intent-filter>
            
            <!-- TECH 002 -->           	    
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED"/>
            </intent-filter>
            <meta-data android:name="android.nfc.action.TECH_DISCOVERED" 
                android:resource="@xml/filter_nfc">
            </meta-data>
                
            <!-- TAG 003 --> 
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
         </activity>
         
         <activity android:name=".history.TagHistoryList"></activity>
         <activity android:name=".history.HistoryViewFrame" 
             	android:icon="@drawable/ic_launcher_history"/>
         
         <activity android:name=".record.BookmarkListActivity" 
             android:label="@string/label_bookmark_list_activity"></activity>
             
         <provider android:name=".provider.TagProvider"
             android:authorities="com.mediatek.nfc.tag"></provider>
         
         <activity android:name=".settings.SettingsActivity" 
             android:label="@string/label_settings_activity"></activity>
    </application>

</manifest>