<?xml version="1.0" encoding="utf-8"?>


<ScrollView 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" 
  android:orientation="vertical" 
  >
  
  	<TextView 
  	android:id="@+id/BLEInitiate" 
  	android:text="@string/BLEInitiate"
  	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:layout_marginLeft = "10dip"
	></TextView>
	
	<!--Initiate scan interval -->
	<LinearLayout 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:orientation="horizontal" 
		android:layout_marginLeft = "10dip"
		android:id="@+id/LinearLayout">
		<TextView android:text="@string/BLEScanInterval" 
				android:layout_width="130dip" 
				android:layout_height="wrap_content"
		></TextView>
		<EditText 
				android:id="@+id/BLEInitiateScanInterval" 
				android:layout_width="120dip" 
				android:layout_height="wrap_content"
		></EditText>
		<TextView android:text="@string/BLETimeUnit" 
				android:layout_width="60dip" 
				android:layout_height="wrap_content"
		></TextView>
	</LinearLayout>

	
	<!--initiate scan window -->
	<LinearLayout 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:orientation="horizontal" 
		android:layout_marginLeft = "10dip"
		android:id="@+id/LinearLayout">
		<TextView android:text="@string/BLEScanWindow" 
				android:layout_width="130dip" 
				android:layout_height="wrap_content"
		></TextView>
		<EditText 
				android:id="@+id/BLEInitiateScanWindow" 
				android:layout_width="120dip" 
				android:layout_height="wrap_content"
		></EditText>
		<TextView android:text="@string/BLETimeUnit" 
				android:layout_width="60dip" 
				android:layout_height="wrap_content"
		></TextView>
	</LinearLayout>
	
	<!-- initiate filter policy select -->	
	<LinearLayout 
		android:id="@+id/LinearLayout" 		
		android:layout_width="fill_parent" 		
		android:layout_height="wrap_content"
		android:layout_marginLeft = "10dip"		
		android:orientation="horizontal">  	  	
		<TextView 
			android:text="@string/BLEInitiateFilter" 								
			android:layout_width="130dip" 				
			android:layout_height="wrap_content"				
			></TextView>	  	
		<Spinner 
			android:id="@+id/BLEInitiateFilterSpinner" 				
			android:layout_height="wrap_content" 				
			android:layout_width="180dip"				
			></Spinner>	
	</LinearLayout>
	
<!-- peer address type select -->	
	<LinearLayout 
	android:id="@+id/LinearLayout" 		
	android:layout_width="fill_parent" 		
	android:layout_height="wrap_content"		
	android:orientation="horizontal"
	android:layout_marginLeft = "10dip"
	android:paddingTop="10dip">  
	<TextView 
	android:text="@string/BLEPeerAddressType" 				 				
	android:layout_width="130dip" 				
	android:layout_height="wrap_content"				
	
	></TextView>	  	
	<Spinner 
	android:id="@+id/BLEInitiatePeerAddressTypeSpinner" 				
	android:layout_height="wrap_content" 				
	android:layout_width="180dip"
	></Spinner>	
	</LinearLayout>
	
	<!-- own address type select -->	
	<LinearLayout 
	android:id="@+id/LinearLayout" 		
	android:layout_width="fill_parent" 		
	android:layout_height="wrap_content"		
	android:orientation="horizontal"
	android:layout_marginLeft = "10dip"
	android:paddingTop="10dip">  
	<TextView 
	android:text="@string/BLEOwnAddressType" 				 				
	android:layout_width="130dip" 				
	android:layout_height="wrap_content"				
	
	></TextView>	  	
	<Spinner 
	android:id="@+id/BLEInitiateOwnAddressTypeSpinner" 				
	android:layout_height="wrap_content" 				
	android:layout_width="180dip"
	></Spinner>	
	</LinearLayout>
	

	<!--peer address -->
	<LinearLayout 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:orientation="horizontal" 
		android:layout_marginLeft = "10dip"
		android:id="@+id/LinearLayout">
		<TextView android:text="@string/BLEPeerAddress" 
				android:layout_width="130dip" 
				android:layout_height="wrap_content"
		></TextView>
		<EditText 
				android:id="@+id/BLEPeerAddress" 
				android:layout_width="180dip" 
				android:layout_height="wrap_content"
		></EditText>
	</LinearLayout>
	
	<!--Connection interval min -->
	<LinearLayout 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:orientation="horizontal" 
		android:layout_marginLeft = "10dip"
		android:id="@+id/LinearLayout">
		<TextView android:text="@string/BLEIntervalMin" 
				android:layout_width="130dip" 
				android:layout_height="wrap_content"
		></TextView>
		<EditText 
				android:id="@+id/BLEInitiateIntervalMin" 
				android:layout_width="120dip" 
				android:layout_height="wrap_content"
		></EditText>
		<TextView android:text="@string/BLETimeUnit" 
				android:layout_width="60dip" 
				android:layout_height="wrap_content"
		></TextView>
	</LinearLayout>
	<!--Connection interval max -->
	<LinearLayout 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:orientation="horizontal" 
		android:layout_marginLeft = "10dip"
		android:id="@+id/LinearLayout">
		<TextView android:text="@string/BLEIntervalMax" 
				android:layout_width="130dip" 
				android:layout_height="wrap_content"
		></TextView>
		<EditText 
				android:id="@+id/BLEInitiateIntervalMax" 
				android:layout_width="120dip" 
				android:layout_height="wrap_content"
		></EditText>
		<TextView android:text="@string/BLETimeUnit" 
				android:layout_width="60dip" 
				android:layout_height="wrap_content"
		></TextView>
	</LinearLayout>
	
	
	<!--BLELatency input -->
	<LinearLayout 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:orientation="horizontal"
		android:layout_marginLeft = "10dip" 
		android:id="@+id/LinearLayout">
		<TextView android:text="@string/BLELatency" 
				android:layout_width="130dip" 
				android:layout_height="wrap_content"
		></TextView>
		<EditText 
				android:id="@+id/BLELatency" 
				android:layout_width="150dip" 
				android:layout_height="wrap_content"
		></EditText>
	</LinearLayout>
	
	
	<!--BLESupervisionTimeout -->
	<LinearLayout 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:orientation="horizontal" 
		android:layout_marginLeft = "10dip"
		android:id="@+id/LinearLayout">
		<TextView android:text="@string/BLESupervisionTimeout" 
				android:layout_width="130dip" 
				android:layout_height="wrap_content"
		></TextView>
		<EditText 
				android:id="@+id/BLESupervisionTimeout" 
				android:layout_width="120dip" 
				android:layout_height="wrap_content"
		></EditText>
		<TextView android:text="@string/BLESupervisionTimeUnit" 
				android:layout_width="60dip" 
				android:layout_height="wrap_content"
		></TextView>
	</LinearLayout>
	
	
	<!--BLEMinCELength -->
	<LinearLayout 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:orientation="horizontal" 
		android:layout_marginLeft = "10dip"
		android:id="@+id/LinearLayout">
		<TextView android:text="@string/BLEMinCELength" 
				android:layout_width="130dip" 
				android:layout_height="wrap_content"
		></TextView>
		<EditText 
				android:id="@+id/BLEMinCELength" 
				android:layout_width="120dip" 
				android:layout_height="wrap_content"
		></EditText>
		<TextView android:text="@string/BLETimeUnit" 
				android:layout_width="60dip" 
				android:layout_height="wrap_content"
		></TextView>
	</LinearLayout>
	<!--BLEMaxCELength -->
	<LinearLayout 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:orientation="horizontal" 
		android:layout_marginLeft = "10dip"
		android:id="@+id/LinearLayout">
		<TextView android:text="@string/BLEMaxCELength" 
				android:layout_width="130dip" 
				android:layout_height="wrap_content"
		></TextView>
		<EditText 
				android:id="@+id/BLEMaxCELength" 
				android:layout_width="120dip" 
				android:layout_height="wrap_content"
		></EditText>
		<TextView android:text="@string/BLETimeUnit" 
				android:layout_width="60dip" 
				android:layout_height="wrap_content"
		></TextView>
	</LinearLayout>
	  
	  
	 <!-- start/stop button-->
	<LinearLayout android:id="@+id/LinearLayout" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft = "10dip"
		android:paddingTop="10dip">
  
	  	<Button android:text="@string/BLEStart" 
				android:id="@+id/BLEInitiateStart" 
				android:layout_width="155dip" 
				android:layout_height="wrap_content"
				></Button>
	  	<Button android:text="@string/BLEStop" 
				android:id="@+id/BLEInitiateStop" 
				android:layout_width="155dip" 
				android:layout_height="wrap_content"
				></Button>
	</LinearLayout>
   
</LinearLayout>
</ScrollView >