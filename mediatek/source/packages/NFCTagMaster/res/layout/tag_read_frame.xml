<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/main_background">
    
    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:layout_marginTop="@dimen/sub_content_padding"
    	android:layout_marginLeft="@dimen/sub_content_padding"
    	android:layout_marginRight="@dimen/sub_content_padding"
    	android:orientation="horizontal" 
    	android:gravity="center_vertical" 
    	android:background="@drawable/bg_info">
        <LinearLayout 
    		android:layout_width="0dip"
    		android:layout_weight="1"
    		android:layout_height="wrap_content" 
    		android:layout_margin="@dimen/sub_content_info_margin"
    		android:orientation="vertical">
    		<TextView android:id="@+id/tag_read_label_title"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:text="@string/title_default"
        		android:textColor="@color/read_tag_type_title_color"
        		android:textSize="@dimen/read_tag_type_title_size"/>
    		<TextView android:id="@+id/tag_read_label_summary"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:text="@string/summary_default"
        		android:textColor="@color/read_tag_type_summary_color"
        		android:textSize="@dimen/read_tag_type_summary_size"/>
    	</LinearLayout>
    	<ImageView
    		android:layout_marginLeft="@dimen/sub_content_info_margin"
    		android:layout_marginRight="@dimen/sub_content_info_margin"
    		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:id="@+id/read_tag_icon"
        	android:src="@drawable/ic_tag_phone_num"
        	android:background="@drawable/flying_icon_bg"/>
        	<!-- 
        	android:layout_width="@dimen/read_tag_type_icon_size"
        	android:layout_height="@dimen/read_tag_type_icon_size" 
        	 -->
    </LinearLayout>
    
    <LinearLayout android:id="@+id/sub_content"
        android:layout_height="0dip"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/sub_content_padding"
    	android:layout_marginRight="@dimen/sub_content_padding"
    	android:layout_marginBottom="@dimen/sub_content_padding"
        android:layout_weight="1" 
        android:background="@drawable/bg_info">
    </LinearLayout>
    
    <View android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/action_button_separator_color"/>
    <LinearLayout 
        android:id="@+id/read_btn_view"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/customized_btn_action"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">
        <TextView android:id="@+id/read_btn_text"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:gravity="center"
            android:layout_margin="5dip"
            android:text="@string/text_read_btn"
            android:textSize="@dimen/action_button_text_size"/>
    </LinearLayout>
    
</LinearLayout>

