<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/whole_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- No contact notice part -->
    <LinearLayout 
    	android:id="@+id/gemini_sim_tether_no_contact_view"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="vertical">
    	<ScrollView 
    	android:layout_width="match_parent"
        android:layout_height="0dip" 
        android:layout_weight="1">
    	<TextView 
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
        	android:text="@string/gemini_sim_tether_nocontacts"
    		android:paddingLeft="10dip"
        	android:paddingRight="10dip"
        	android:paddingTop="10dip"
        	android:textColor="?android:attr/textColorSecondary"
        	android:textAppearance="?android:attr/textAppearanceMedium">
    	</TextView>
        </ScrollView>
    	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:gravity="center_horizontal"
    	android:orientation="horizontal">
    	<View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    	<Button android:id="@+id/gemini_sim_tether_nocontact_confirm_btn" 
			android:layout_width="0dip" 
			android:layout_height="wrap_content" 
			android:layout_weight="2" 
			android:layout_marginTop="6dip"
			android:layout_marginBottom="2dip"
			android:gravity="center" 
			android:textSize="18sp"
			android:text="@string/gemini_sim_tether_nocontact_confirm"/>
		<View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    	</LinearLayout>
    	
    </LinearLayout>
    
    <!-- Contact list part -->
    <LinearLayout 
    	android:id="@+id/gemini_sim_tether_contact_view"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent" 
    	android:orientation="vertical" >
    <RelativeLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="horizontal" >
    	
    	<TextView 
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:text="@string/gemini_sim_tether_select_all"
    		android:textAppearance="?android:attr/textAppearanceLarge" 
    		android:singleLine="true" 
			android:ellipsize="marquee" 
    		android:layout_alignParentLeft="true" 
    		android:layout_centerVertical="true" 
    		android:layout_marginLeft="5dip"/>
    	<CheckBox android:id="@+id/gemini_sim_tether_select_all" 
    		android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true" 
			android:layout_centerVertical="true" 
			android:layout_marginRight="15dip"/>
    </RelativeLayout>
	<View 
    	android:layout_width="fill_parent" 
    	android:layout_height="2dip" 
    	android:background="?android:attr/listDivider"/>
    		
	<ListView android:id="@android:id/list" 
		android:layout_width="match_parent" 
		android:layout_height="0dip" 
		android:layout_weight="1"/>
		
    </LinearLayout>
</LinearLayout>
