<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="0dip" 
    android:orientation="vertical" >
    <TextView android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tag_info_item_left_cut"
        android:textAppearance="@style/info_item_label"
        android:text="@string/read_view_param_title"
        android:layout_marginTop="10dip"/>
    
    <View android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/tag_info_lable_content_separator_color"/>
    
    <ScrollView android:layout_width="fill_parent"
    	android:layout_height="0dip" 
    	android:layout_weight="1">
    	<LinearLayout 
    	    android:id="@+id/sub_content_layout" 
    	    android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:orientation="vertical">
    	    
    	</LinearLayout>
    </ScrollView>
</LinearLayout>