<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="0dip" 
    android:orientation="vertical" >
    
    <TextView android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="@dimen/tag_info_item_left_cut"
        android:textAppearance="@style/info_item_label"
        android:text="@string/edit_view_selected_app_name_label"/>
    <View android:layout_width="match_parent"
        android:layout_height="@dimen/tag_info_lable_content_separator_width"
        android:background="@color/tag_info_lable_content_separator_color"/>
    
    <LinearLayout android:layout_width="match_parent" 
        android:layout_height="76dip" 
        android:orientation="horizontal" 
        android:layout_marginTop="0dip"
        android:layout_marginLeft="@dimen/tag_info_item_left_cut"
        android:gravity="center_vertical">
    	<ImageView android:id="@+id/edit_info_app_icon"
            android:layout_width="48dip" 
        	android:layout_height="48dip"
        	android:layout_marginTop="14dip"
        	android:layout_marginBottom="14dip"
        	android:layout_marginRight="8dip"/>
    	<TextView android:id="@+id/edit_info_app_name"
    	    android:layout_width="0dip" 
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?android:attr/textColorPrimary"/>
    </LinearLayout>
    
    
    <TextView android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="@dimen/tag_info_item_left_cut"
        android:textAppearance="@style/info_item_label"
        android:text="@string/edit_view_app_package_name_label"/>
    
    <View android:layout_width="match_parent"
        android:layout_height="@dimen/tag_info_lable_content_separator_width"
        android:background="@color/tag_info_lable_content_separator_color"/>
    
    <TextView android:id="@+id/edit_info_app_package_name"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tag_info_item_left_cut"
        android:textAppearance="@style/info_item"/>
    
    
    <LinearLayout android:id="@+id/edit_info_app_selector"
        android:layout_width="300dip" 
        android:layout_height="wrap_content" 
        android:orientation="horizontal" 
        android:layout_marginTop="50dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:background="@drawable/btn_default_holo_light"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center">
        <ImageView 
            android:clickable="false"
            android:layout_width="wrap_content" 
        	android:layout_height="wrap_content" 
        	android:layout_marginRight="10dip"
        	android:src="@drawable/ic_tag_app"/>
    	<TextView android:layout_width="0dip" 
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textSize="20sp"
        	android:text="@string/edit_view_app_selector_title"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>